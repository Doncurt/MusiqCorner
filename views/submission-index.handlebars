<div class= "header">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <div class="item active">
          <img src="singer1.jpg" alt="Los Angeles" style="width:100%;">
          <div class="carousel-caption">
            <h3>Post Your Talent!</h3>
          </div>
        </div>

        <div class="item">
          <img src="singer2.jpg" alt="Chicago" style="width:100%;">
          <div class="carousel-caption">
            <h3>Get FeedBack!</h3>
          </div>
        </div>

        <div class="item">
          <img src="singer3.jpg" alt="New York" style="width:100%;">
          <div class="carousel-caption">
            <h3>Improve!</h3>
          </div>
        </div>

      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

<h1 class="sub-head">Submissions</h1>
<div class="row">
{{#each comments}}
  <div class="col-sm-3">
    <a href="/comments/{{this._id}}">
      <h4>{{this.video}}</h4>
      <h5>{{this.name}}</h5>
      <small>{{this.comment}}</small>
    </a>
    <a href="/comments/{{this._id}}/edit">Edit</a>
    <form method="POST" action="/comments/{{this._id}}?_method=DELETE">
      <button type="submit">Delete</button>
       </div>
{{/each}}
 </div>
 <div class="footer">
   <p>Musiq Corner &copy 2017 by Donovan Adams</p>
 </div>
</div>
